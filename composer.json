{
    "name": "jashaics/env-encrypter",
    "description": "Simple .env file encrypter for Laravel. Through this package is possible to encrypt/decrypt the desired env file and make it available for versioning; decryption is especially useful on deployment through github actions",
    "version": "0.1",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "laravel/pint": "^1.5",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jashaics\\EnvEncrypter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jashaics\\EnvEncrypter\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jashaics\\EnvEncrypter\\EnvEncrypterServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },   
    "authors": [
        {
            "name": "Jacopo Viscuso",
            "email": "me@jacopoviscuso.it"
        }
    ],
    "minimum-stability": "alpha"
}
